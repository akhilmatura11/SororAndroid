<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WhatYourThingActivity">

    <TextView
        android:id="@+id/whatYourThingTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center"
        android:text="@string/title_what_s_your_thing"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/thingsAboutYouLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintTop_toBottomOf="@id/whatYourThingTitle">

        <TextView
            android:id="@+id/thingsAboutYouTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:text="Things about you"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/thingsAboutYouDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins"
            android:text="Select a minimum of three packs below to include on your profile that describe your interests and experience."
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/thingsAboutYouTitle" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/aboutMeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/poppins_medium"
        android:text="About me"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/whatYourThingTitle"
        app:layout_constraintTop_toBottomOf="@id/thingsAboutYouLayout" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/aboutMeChipGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@id/whatYourThingTitle"
        app:layout_constraintStart_toStartOf="@id/whatYourThingTitle"
        app:layout_constraintTop_toBottomOf="@id/aboutMeTitle">

        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:fontFamily="@font/poppins"
            android:text="Home Maker"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:checkedIconEnabled="false"
            app:chipBackgroundColor="@drawable/chip_color_state" />

        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:fontFamily="@font/poppins"
            android:text="Full Time Work"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:checkedIconEnabled="false"
            app:chipBackgroundColor="@drawable/chip_color_state" />

        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:fontFamily="@font/poppins"
            android:text="Part Time Work"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:checkedIconEnabled="false"
            app:chipBackgroundColor="@drawable/chip_color_state" />

        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:fontFamily="@font/poppins"
            android:text="Business Owner"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:checkedIconEnabled="false"
            app:chipBackgroundColor="@drawable/chip_color_state" />

        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:fontFamily="@font/poppins"
            android:text="Freelance"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:checkedIconEnabled="false"
            app:chipBackgroundColor="@drawable/chip_color_state" />

        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:fontFamily="@font/poppins"
            android:text="Grand Mom"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:checkedIconEnabled="false"
            app:chipBackgroundColor="@drawable/chip_color_state" />

        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:fontFamily="@font/poppins"
            android:text="Mother"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:checkedIconEnabled="false"
            app:chipBackgroundColor="@drawable/chip_color_state" />

        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:fontFamily="@font/poppins"
            android:text="New-Mom"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:checkedIconEnabled="false"
            app:chipBackgroundColor="@drawable/chip_color_state" />

        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:fontFamily="@font/poppins"
            android:text="Expecting Mom"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:checkedIconEnabled="false"
            app:chipBackgroundColor="@drawable/chip_color_state" />

        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:fontFamily="@font/poppins"
            android:text="Single Mother"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:checkedIconEnabled="false"
            app:chipBackgroundColor="@drawable/chip_color_state" />

        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:fontFamily="@font/poppins"
            android:text="Mother To Teenager"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:checkedIconEnabled="false"
            app:chipBackgroundColor="@drawable/chip_color_state" />

        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:fontFamily="@font/poppins"
            android:text="Pet Mom"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:checkedIconEnabled="false"
            app:chipBackgroundColor="@drawable/chip_color_state" />
    </com.google.android.material.chip.ChipGroup>


    <TextView
        android:id="@+id/interestTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Interest"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/whatYourThingTitle"
        app:layout_constraintTop_toBottomOf="@id/aboutMeChipGroup" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/interestChipGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@id/whatYourThingTitle"
        app:layout_constraintStart_toStartOf="@id/whatYourThingTitle"
        app:layout_constraintTop_toBottomOf="@id/interestTitle">

        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:fontFamily="@font/poppins"
            android:text="Fitness"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:checkedIconEnabled="false"
            app:chipBackgroundColor="@drawable/chip_color_state" />

        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:fontFamily="@font/poppins"
            android:text="Art &amp; Craft"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:checkedIconEnabled="false"
            app:chipBackgroundColor="@drawable/chip_color_state" />

        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:fontFamily="@font/poppins"
            android:text="Foodie"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:checkedIconEnabled="false"
            app:chipBackgroundColor="@drawable/chip_color_state" />

        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:fontFamily="@font/poppins"
            android:text="Cook"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:checkedIconEnabled="false"
            app:chipBackgroundColor="@drawable/chip_color_state" />

        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:fontFamily="@font/poppins"
            android:text="Nutritionist"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:checkedIconEnabled="false"
            app:chipBackgroundColor="@drawable/chip_color_state" />

        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:fontFamily="@font/poppins"
            android:text="Vegetarian"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:checkedIconEnabled="false"
            app:chipBackgroundColor="@drawable/chip_color_state" />

        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:fontFamily="@font/poppins"
            android:text="Movie Buff"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:checkedIconEnabled="false"
            app:chipBackgroundColor="@drawable/chip_color_state" />

        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:fontFamily="@font/poppins"
            android:text="Book Worn"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:checkedIconEnabled="false"
            app:chipBackgroundColor="@drawable/chip_color_state" />

        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:fontFamily="@font/poppins"
            android:text="Sustainable Living Campaion"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:checkedIconEnabled="false"
            app:chipBackgroundColor="@drawable/chip_color_state" />
    </com.google.android.material.chip.ChipGroup>

    <androidx.cardview.widget.CardView
        android:id="@+id/continueButtonLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        app:cardBackgroundColor="@color/color_primary_dark"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/whatYourThingTitle"
        app:layout_constraintStart_toStartOf="@id/whatYourThingTitle"
        app:layout_constraintTop_toBottomOf="@id/interestChipGroup"
        app:layout_constraintVertical_bias="0.99">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:padding="2dp">

            <TextView
                android:id="@+id/ccontinueButtonText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="Continue"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>